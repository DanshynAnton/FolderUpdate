    <SolidColorBrush x:Key="cMainFont" Color="#0B0F20" />
    <SolidColorBrush x:Key="cSubFont" Color="#2A3A80" />
    <SolidColorBrush x:Key="cInputFont" Color="#000000" />
    
    <SolidColorBrush x:Key="cDarkestBlue" Color="#3d7CAB" />
    <SolidColorBrush x:Key="cDarkBlue" Color="#5091C2" />
    <SolidColorBrush x:Key="cMDBlue" Color="#6FA5CE" />
    <SolidColorBrush x:Key="cMLrkBlue" Color="#8EB9D9" />
